        "#apresente também todos os elementos do vetor um ao lado do outro ao final\n",
        "positivos = 0\n",
        "numero = []\n",
        "for i in range(8):\n",
        "    numero.append(int(input(f'Digite o {i+1}º número: ')))\n",
        "    if numero[i] > 0:\n",
        "        positivos += 1\n",
        "\n",
        "for i in range(len(numero)):\n",
        "    print(numero[i], end = '\\t')\n",
        "print('\\n', positivos, 'elementos são positivos.')"
